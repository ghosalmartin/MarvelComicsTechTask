<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/marvel_comic_search_result_avatar"
            android:layout_width="@dimen/marvel_comic_thumbnail_size"
            android:layout_height="@dimen/marvel_comic_thumbnail_size"
            android:contentDescription="@null"
            android:scaleType="fitCenter"/>

    <TextView
            android:id="@+id/marvel_comic_search_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>